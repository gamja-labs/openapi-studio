{
    "compilerOptions": {
        "module": "NodeNext",
        "target": "ES2023",
        "moduleResolution": "NodeNext",
        "composite": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true
    }
}